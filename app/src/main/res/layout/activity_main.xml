<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="com.bobrov.mobilegithubclient.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="Мобильный клиент для GitHub!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_activity_login_standart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Standart" />

        <Button
            android:id="@+id/main_activity_loginOath_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Oath" />

        <Button
            android:id="@+id/main_activity_loginToken_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Access Token" />

    </LinearLayout>
</LinearLayout>
